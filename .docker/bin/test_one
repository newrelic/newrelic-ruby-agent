#!/usr/bin/bash

# test_one - Test one Ruby. Run 'bundle install' and 'bundle rake test:all'
#            against the given Ruby version
#
#            usage: test_one <RUBY VERSION>
#            example: test_one 3.1.0

version="$1"
cd /app
ruby_run $version bundle install
ruby_run $version bundle exec rake test:all
