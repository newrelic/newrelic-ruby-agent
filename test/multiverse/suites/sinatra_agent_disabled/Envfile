# frozen_string_literal: true

SINATRA_VERSIONS = [
  [nil],
  ['2.1.0'],
  ['2.0.0']
]

def gem_list(sinatra_version = nil)
  <<~RB
    gem 'sinatra'#{sinatra_version}
    gem 'rack', '~> 2.2'
    gem 'rack-test', '>= 0.8.0', :require => 'rack/test'
    
  RB
end

create_gemfiles(SINATRA_VERSIONS)
