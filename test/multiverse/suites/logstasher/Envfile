# frozen_string_literal: true

instrumentation_methods :chain, :prepend

logstasher_versions = [
  [nil, 2.6]
]

def gem_list(logstasher_versions = nil)
  <<~RB
    gem 'logstasher'#{logstasher_versions}
    gem 'activesupport', '~> 7.0.0'
  RB
end

create_gemfiles(logstasher_versions)
