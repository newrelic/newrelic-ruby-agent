# frozen_string_literal: true

require File.expand_path(File.join(File.dirname(__FILE__), '..', '..', '..', 'helpers', 'docker'))

# dalli v3.2.4+ requires Ruby 2.6+, older Rubies use the latest 3.x they can
gemfile_line = "gem 'dalli'#{", '~> 3.0'" if RUBY_VERSION < '2.6.0'}"
gemfile gemfile_line

def memcache_running?
  begin
  require 'socket'
    TCPSocket.new('localhost', 11211)
    true
  rescue
    false
  end
end

before_suite do
  system('memcached -d -l localhost') unless memcache_running? || docker?
end
