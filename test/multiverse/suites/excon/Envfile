gemfile <<-RB
  gem 'excon'
  gem 'rack'
  gem 'json', :platforms => [:rbx, :mri_18]
  #{ruby3_gem_webrick}
RB

if RUBY_VERSION >= '2.2.0'
  excon_versions = %w(0.60.0)
else
  excon_versions = %w(0.60.0
                      0.45.3
                      0.25.0
                      0.24.0
                      0.19.0
                      0.18.0
                      0.10.0)
end

excon_versions.each do |excon_version|
  gemfile <<-RB
    gem 'excon', '~> #{excon_version}'
    gem 'rack'
    gem 'json', :platforms => [:rbx, :mri_18]
    #{ruby3_gem_webrick}
  RB
end
