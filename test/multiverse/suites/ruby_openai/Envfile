# frozen_string_literal: true

instrumentation_methods :chain, :prepend

RUBY_OPENAI_VERSIONS = [
  [nil], # 6.0.0 returns the body, whereas older versions return body.to_json
  ['5.0.0'], # json_post moves from a class method to an instance method
  ['4.3.2'], # Faraday replaces HTTParty
  ['3.4.0'] # OpenAI::Client#chat method added
]

def gem_list(version = nil)
  <<~RB
    gem 'ruby-openai'#{version}
  RB
end

create_gemfiles(RUBY_OPENAI_VERSIONS)
