suite_condition("SideKiq requires MRI 1.9.3 or JRuby 1.6 in 1.9 mode") do
  RUBY_VERSION >= '1.9.3' || (RUBY_PLATFORM == 'java' && RUBY_VERSION >= '1.9')
end

gemfile <<-RB
  gem 'json'
  gem 'sidekiq', '~> 3.0.0'
  gem 'rack'
  gem 'newrelic_rpm', :require => false, :path => File.expand_path('../../../../')
RB

