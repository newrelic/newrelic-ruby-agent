if RUBY_VERSION >= '3.0.0'
  gemfile <<-RB
    gem 'activemerchant'
    gem 'rack'
    gem 'rexml'
    gem 'webrick'

    gem 'activesupport', '~> 4.2.0'
    gem 'nokogiri'
    gem 'minitest', '~> 5.1.0'

    # Need to load newrelic_rpm after ActiveMerchant Gateways are required
    gem 'newrelic_rpm', :require => false, :path => File.expand_path('../../../../')
  RB
end

