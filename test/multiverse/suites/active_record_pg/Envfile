if RUBY_VERSION >= '2.4.0' && RUBY_VERSION < '3.0.0' && RUBY_PLATFORM != 'java'

  gemfile <<-RB
    gem 'activerecord', '5.2.2'
    gem 'pg'
    #{boilerplate_gems}
  RB

  gemfile <<-RB
    gem 'activerecord', '~> 5.1.6'
    gem 'pg'
    #{boilerplate_gems}
  RB

  gemfile <<-RB
    gem 'activerecord', '~> 5.0.0'
    gem 'pg'
    #{boilerplate_gems}
  RB
