
boilerplate_gems = <<-BOILERPLATE
  gem 'rack'
  gem 'minitest', '~> 5.2.3'
BOILERPLATE

if RUBY_VERSION >= '2.7.0'
  gemfile <<-RB
    gem 'activerecord'
    gem 'pg'
    gem 'webrick'
    #{boilerplate_gems}
  RB

  gemfile <<-RB
    gem 'activerecord', '~> 7.0'
    gem 'pg'
    gem 'webrick'
    #{boilerplate_gems}
  RB

  gemfile <<-RB
    gem 'activerecord', '~> 6.1'
    gem 'pg'
    gem 'webrick'
    #{boilerplate_gems}
  RB

  gemfile <<-RB
    gem 'activerecord', '~> 6.0'
    gem 'pg'
    gem 'webrick'
    #{boilerplate_gems}
  RB
end

