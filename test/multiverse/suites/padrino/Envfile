# frozen_string_literal: true

instrumentation_methods :chain, :prepend

# sinatra 4
if RUBY_VERSION > '3.0'
  gemfile <<~RB
    gem 'activesupport'
    gem 'padrino'
    gem 'rack-test'
    gem 'sinatra', '~> 4'
  RB
end

# Sinatra 3
if RUBY_VERSION > '2.6.0'
  gemfile <<~RB
    gem 'activesupport'
    gem 'padrino'
    gem 'rack-test'
    gem 'sinatra', '~> 3'
  RB
end

# Sinatra 2
gemfile <<~RB
  gem 'activesupport', '~> 3'
  gem 'padrino', '0.15.1'
  gem 'rack-test', '>= 0.8.0', :require => 'rack/test'
  gem 'sinatra', '< 3'
RB
