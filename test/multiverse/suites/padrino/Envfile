# frozen_string_literal: true

instrumentation_methods :chain, :prepend

# Sinatra 3+
gemfile <<~RB
  gem 'activesupport'
  gem 'padrino', '0.15.3'
  gem 'rack-test'
  gem 'sinatra', '< 4'
RB

# Sinatra <3
gemfile <<~RB
  gem 'activesupport', '~> 3'
  gem 'padrino', '0.15.1'
  gem 'rack-test', '>= 0.8.0', :require => 'rack/test'
  gem 'sinatra', '< 3'
RB
