suite_condition("bunny not supported for JRuby") do
  RUBY_PLATFORM != 'java'
end

amq_protocol_version_str = RUBY_VERSION < "2.2.0" ? ", '< 2.3.0'" : ''

if RUBY_VERSION >= '2.2'
  gemfile <<-RB
    gem 'rack'
    gem 'bunny', '~>2.9.1'
    gem 'amq-protocol'#{amq_protocol_version_str}
    #{ruby3_gem_webrick}
  RB
end

gemfile <<-RB
  gem 'rack'
  gem 'bunny', '~>2.8.1'
  gem 'amq-protocol'#{amq_protocol_version_str}
  #{ruby3_gem_webrick}
RB

