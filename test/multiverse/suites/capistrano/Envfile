suite_condition("Capistrano 3 flaky on JRuby") do
  RUBY_PLATFORM != 'java'
end

boilerplate = <<-BOILERPLATE
  gem 'rack'
  #{ruby3_gem_webrick}
BOILERPLATE

gemfile <<-RB
  gem 'sshkit', '1.16.0'
  gem 'capistrano', '~>3.11.1'
  #{boilerplate}
RB
