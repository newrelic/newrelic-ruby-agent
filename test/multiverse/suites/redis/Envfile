# frozen_string_literal: true

instrumentation_methods :chain, :prepend

REDIS_VERSIONS = [
  [nil, 2.5],
  ['4.8.0', 2.4],
  ['3.3.0']
]

def gem_list(redis_version = nil)
  <<-RB
    gem 'rack'
    gem 'redis'#{redis_version}
    #{ruby3_gem_webrick}
  RB
end

create_gemfiles(REDIS_VERSIONS, gem_list)
