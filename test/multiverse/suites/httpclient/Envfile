gemfile <<-RB
  gem 'httpclient' # latest version
  gem 'rack'
  gem 'json', :platforms => [:rbx, :mri_18]
RB

HTTPCLIENT_VERSIONS = %w(2.8.3
                         2.6.0
                         2.5.3
                         2.4.0
                         2.3.4
                         2.2.0)

HTTPCLIENT_VERSIONS.each do |httpclient_version|
  gemfile <<-RB
    gem 'httpclient', '~> #{httpclient_version}'
    gem 'rack'
    gem 'json', :platforms => [:rbx, :mri_18]
  RB
end

# vim: ft=ruby
