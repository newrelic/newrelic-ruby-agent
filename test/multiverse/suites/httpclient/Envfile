# frozen_string_literal: true

instrumentation_methods :chain, :prepend
HTTPCLIENT_VERSIONS = [
  [nil, 2.2],
  ['2.8.3', 2.2],
  ['2.6.0', 2.2, 3.0],
  ['2.5.3', 2.2, 3.0],
  ['2.4.0', 2.2, 3.0],
  ['2.3.4', 2.2, 3.0],
  ['2.2.0', 2.2, 3.0]
]

def gem_list(httpclient_version = nil)
  <<-RB
    gem 'httpclient'#{httpclient_version}
    gem 'rack'
    #{ruby3_gem_webrick}
  RB
end

create_gemfiles(HTTPCLIENT_VERSIONS, gem_list)
