rack_test_version = RUBY_VERSION < "2.2.0" ? "< 0.8.0" : ">= 0.8.0"

gemfile <<-RB
  gem 'sinatra', '~> 1.4.0', :require => false
  gem 'rack-test', '#{rack_test_version}', :require => 'rack/test'
RB

gemfile <<-RB
  gem 'sinatra', '~> 1.3.0', :require => false
  gem 'rack-test', '#{rack_test_version}', :require => 'rack/test'
RB

gemfile <<-RB
  gem 'sinatra', '~> 1.2.0', :require => false
  gem 'rack-test', '#{rack_test_version}', :require => 'rack/test'
RB

