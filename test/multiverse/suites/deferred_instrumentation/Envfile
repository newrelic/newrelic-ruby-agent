instrumentation_methods :chain, :prepend

gemfile <<-RB
  gem 'sinatra', '~> 1.4.8', :require => false
  gem 'rack-test', '>= 0.8.0', :require => 'rack/test'
  #{ruby3_gem_webrick}
RB

if RUBY_VERSION >= '2.3.0'
  gemfile <<-RB
    gem 'sinatra', '~> 2.1.0', :require => false
    gem 'rack-test', '>= 0.8.0', :require => 'rack/test'
    #{ruby3_gem_webrick}
  RB
end
