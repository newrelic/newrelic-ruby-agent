# frozen_string_literal: true

suite_condition("Yajl not supported for JRuby") do
  RUBY_PLATFORM != 'java'
end

YAJL_VERSIONS = [
  [nil, 2.4],
  ['1.4.1', 2.4],
  ['1.3.0', 2.4],
  ['1.2.1', 2.4]
]

def gem_list(yajl_version = nil)
  <<~RB
    gem 'rack'
    gem 'yajl-ruby'#{yajl_version}, require: ['yajl', 'yajl/json_gem']
    
  RB
end

create_gemfiles(YAJL_VERSIONS)
