# frozen_string_literal: true

instrumentation_methods :chain, :prepend

HTTPX_VERSIONS = [
  [nil, 2.7],
  ['1.4.4', 2.7],
  ['1.0.0', 2.7]
]

def gem_list(httpx_version = nil)
  <<~GEM_LIST
    gem 'httpx'#{httpx_version}
    gem 'rack'
  GEM_LIST
end

create_gemfiles(HTTPX_VERSIONS)
