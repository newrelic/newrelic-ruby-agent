rack_test_version = RUBY_VERSION < "2.2.0" ? "< 0.8.0" : ">= 0.8.0"

gemfile <<-RB
  gem 'puma', '~>3.11.0'
  #{ruby3_gem_webrick}
RB

gemfile <<-RB
  gem 'puma', '~>3.11.0'
  gem 'rack', '~>1.6.0'
  gem 'rack-test', '#{rack_test_version}'
  #{ruby3_gem_webrick}
RB

gemfile <<-RB
  gem 'puma', '~>3.11.0'
  #{ruby3_gem_webrick}
RB

if RUBY_VERSION >= '2.2.2'
  gemfile <<-RB
    gem 'puma', '~>3.11.0'
    gem 'rack', '2.0.3'
    gem 'rack-test'
    #{ruby3_gem_webrick}
  RB

  gemfile <<-RB
    gem 'rack', '2.0.3'
    gem 'rack-test'
    #{ruby3_gem_webrick}
  RB
end

gemfile <<-RB
  gem 'rack', '~>1.6.8'
  gem 'rack-test', '#{rack_test_version}'
  #{ruby3_gem_webrick}
RB

gemfile <<-RB
  gem 'rack', '~>1.5.5'
  gem 'rack-test', '#{rack_test_version}'
  #{ruby3_gem_webrick}
RB

gemfile <<-RB
  gem 'rack', '1.4.7'
  gem 'rack-test', '#{rack_test_version}'
  #{ruby3_gem_webrick}
RB

gemfile <<-RB
  gem 'rack', '1.3.10'
  gem 'rack-test', '#{rack_test_version}'
  #{ruby3_gem_webrick}
RB

gemfile <<-RB
  gem 'rack', '1.2.8'
  gem 'rack-test', '#{rack_test_version}'
  #{ruby3_gem_webrick}
RB

gemfile <<-RB
  gem 'rack', '1.1.6'
  gem 'rack-test', '#{rack_test_version}'
  #{ruby3_gem_webrick}
RB

# unsupported version
gemfile <<-RB
  gem 'rack', '1.0.1'
  gem 'rack-test', '#{rack_test_version}'
  #{ruby3_gem_webrick}
RB

