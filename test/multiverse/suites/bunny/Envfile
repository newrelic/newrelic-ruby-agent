suite_condition("bunny not supported for JRuby") do
  RUBY_PLATFORM != 'java'
end

instrumentation_methods :chain, :prepend

if RUBY_VERSION >= '2.3'
  gemfile <<-RB
    gem 'rack'
    gem 'bunny'
    gem 'amq-protocol'
    #{ruby3_gem_webrick}
  RB

  gemfile <<-RB
    gem 'rack'
    gem 'bunny', '~>2.19.0'
    gem 'amq-protocol'
    #{ruby3_gem_webrick}
  RB
end

gemfile <<-RB
  gem 'rack'
  gem 'bunny', '~>2.9.1'
  gem 'amq-protocol'
  #{ruby3_gem_webrick}
RB
