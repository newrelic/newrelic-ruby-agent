if RUBY_VERSION >= '2.7.0'
  # Runs the latest published version of Rails
  gemfile <<-RB
    gem 'rails'
    gem 'haml', '~> 5.1.2'
    gem 'haml-rails', '~> 2.0'
    gem 'minitest', '5.2.3'
    gem 'erubis', '~> 2.7.0' if RUBY_PLATFORM.eql?('java')
    #{ruby3_gem_webrick}
  RB

  gemfile <<-RB
    gem 'rails', '~> 7.0.2'
    gem 'haml', '~> 5.1.2'
    gem 'haml-rails', '2.0.0'
    #{ruby3_gem_webrick}
  RB
end

if RUBY_VERSION >= '2.5.0'
  gemfile <<-RB
    gem 'rails', '~> 6.1.0'
    gem 'haml', '~> 5.1.2'
    gem 'haml-rails', '~> 2.0'
    gem 'minitest', '5.2.3'
    gem 'erubis', '~> 2.7.0' if RUBY_PLATFORM.eql?('java')
    #{ruby3_gem_webrick}
  RB
end

if RUBY_VERSION >= '2.5.0' && RUBY_VERSION < '3.0.0'
  gemfile <<-RB
    gem 'rails', '~> 6.0.0'
    gem 'haml', '~> 5.1.2'
    gem 'haml-rails', '~> 2.0'
    gem 'minitest', '5.2.3'
    gem 'erubis', '~> 2.7.0' if RUBY_PLATFORM.eql?('java')
  RB
end

if RUBY_VERSION < '3.0.0'
  gemfile <<-RB
    gem 'rails', '~> 5.2.8'
    gem 'haml', '~> 5.1.2'
    gem 'haml-rails', '~> 1.0.0'
    gem 'minitest', '5.2.3'
    gem 'erubis', '~> 2.7.0' if RUBY_PLATFORM.eql?('java')
  RB

  gemfile <<-RB
    gem 'rails', '~> 5.1.0'
    gem 'haml', '~> 5.1.2'
    gem 'haml-rails', '~> 1.0.0'
    gem 'minitest', '5.2.3'
  RB

  gemfile <<-RB
    gem 'rails', '~> 5.0.0'
    gem 'haml', '~> 5.1.2'
    gem 'haml-rails', '~> 1.0.0'
    gem 'minitest', '5.2.3'
  RB
end

if RUBY_VERSION < '2.4.0'
  gemfile <<-RB
    gem 'rails', '~> 4.2.0'
    gem 'haml', '~> 5.1.2'
    gem 'haml-rails', '~> 1.0.0'
    gem 'minitest', '5.2.3'
  RB

  gemfile <<-RB
    gem 'rails', '~> 4.1.0'
    # Multiverse has an incompatibility with Minitest 5.3.0, so lock here for
    # now
    gem 'haml', '~> 5.1.2'
    gem 'haml-rails', '~> 1.0.0'
    gem 'minitest', '5.2.3'
  RB

  gemfile <<-RB
    gem 'rails', '~> 4.0.0'
    gem 'haml', '~> 5.1.2'
    gem 'haml-rails', '~> 1.0.0'
  RB

  gemfile <<-RB
    gem 'rails', '~> 3.2.0'
    gem 'i18n', '~> 0.6.11'
    gem 'haml', '4.0.2'   # Getting load issues with haml 4.0.3
    gem 'minitest_tu_shim', :require => false
  RB

  gemfile <<-RB
    gem 'rails', '~> 3.2.0'
    gem 'i18n', '~> 0.6.11'
    gem 'sinatra', '~> 1.4.5'
    gem 'haml', '4.0.2'   # Getting load issues with haml 4.0.3
    gem 'minitest_tu_shim', :require => false
  RB
end
