gem 'rack'
gem 'rack-test', '< 0.8.0'

gem 'newrelic_rpm', :path => '../../..'

gem 'pry' if ENV['ENABLE_PRY']

gem 'simplecov' if ENV['VERBOSE_TEST_OUTPUT']

gem 'warning'
gem 'loofah', '~> 2.20.0' if RUBY_VERSION >= '2.4.0' && RUBY_VERSION < '2.5.0'

