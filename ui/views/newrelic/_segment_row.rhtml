<tr>
	<td>
			<%= segment_row.metric_name %>
			<small>
			<%= link_to "?", 
					"http://rpm.newrelic.com#{url_for :controller => :metric_doc, :metric => segment_row.metric_name }" %>
					</small>
	</td>
	<td align=left> <%= segment_row.call_count %></td>
	<td align=right><%= segment_row.exclusive_time.to_ms %> ms</td>
	<td align=right><%= segment_row.exclusive_time_percentage.to_percentage(0) %>% </td>
	<td>  </td>
	<td align=right><%= segment_row.total_time.to_ms %> ms</td>
	<td align=right><%= segment_row.total_time_percentage.to_percentage(0) %>%</td>
</tr>